{
    "manifest_version": 3,
    "name": "Space Monkey",
    "version": "0.000001",
    "description": "Sir, the first rule of Project Mayhem is you do not ask questions, sir.",
    "action": {
        "default_popup": "extension/main.html",
        "default_icon": "extension/img/main.png"
    },
    "background":{
        "service_worker":"service_worker.js"
    },
    "chrome_url_overrides": {
        "newtab": "extension/new-tab-page.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "extension/js/jquery-3.6.3.js",
                "background.js"
            ],
            "css": [
                "global.css"
            ],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "storage",
        "cookies",
        "topSites",
        "notifications",
        "nativeMessaging",
        "bookmarks",
        "favicon",
        "history",
        "activeTab",
        "tabs",
        "commands",
        "sessions"
    ]
}